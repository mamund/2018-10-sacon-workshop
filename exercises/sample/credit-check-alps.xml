<alps version="1.0">
  <doc>Service description for CreditCheck Service for BigCo, Inc.</doc>

  <!-- data points -->
  <descriptor id="legalName" type="semantic" />
  <descriptor id="streetAddress" type="semantic" text="steet" />
  <descriptor id="addressLocality" type="semantic" text="city"/>
  <descriptor id="addresRegion" type="semantic" text="state/province/region" />
  <descriptor id="addressCountry" type="semantic" />
  <descriptor id="postalCode" type="semantic" />
  <descriptor id="score" type="semantic" text="value from 0 to 10"/>
  <!-- actions -->
  <descriptor id="getScore" type="safe" text="call service" returns="score">
    <descriptor href="#legalName" />
    <descriptor href="streeAddress" />
    <descriptor href="addressLocality" />
    <descriptor href="addressRegion" />
    <descriptor href="addressCountry" />
    <descriptor href="postalCode" />
  </descriptor>

</alps>
